@{
    ViewData["Title"] = "Login";
}

<h1 class="mx-auto text-lg-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6 d-lg-block">
        <form id="account" method="post">
            <div class="form-group">
                <label for="username" class="control-label"></label>
                <input name="username" id="username" class="form-control" type="text" placeholder="Username" />
            </div>
            <div class="form-group">
                <label for="password" class="control-label"></label>
                <input name="password" id="password" type="password" class="form-control" placeholder="Password" />
            </div>
            <div class="btn-group d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Log in</button>
            </div>
        </form>

        @if (this.ViewData["ErrorMessage"] != null)
        {
            <h4 class="alert-danger">Error: @ViewData["ErrorMessage"]</h4>
        }
    </div>
</div>
